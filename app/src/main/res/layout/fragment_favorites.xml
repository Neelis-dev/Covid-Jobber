<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:text="@string/txt_favorites_fragment_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_favorites_fragment_date"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/salaryFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_favorites_fragment_salary"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_favorites_fragment_location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/employerFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_favorites_fragment_employerr"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>